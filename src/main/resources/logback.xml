<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="com.scottlogic.thull.appstore.api" level="DEBUG" />
    <logger name="com.scottlogic.thull.appstore.api.dao" level="DEBUG" />
    <logger name="com.scottlogic.thull.appstore.api.dao.HibernateDao" level="DEBUG" />
    <logger name="com.scottlogic.thull.appstore.api.domains" level="DEBUG" />
    <logger name="com.scottlogic.thull.appstore.api.resources" level="DEBUG" />
    <logger name="com.scottlogic.thull.appstore.api.utils" level="DEBUG" />


    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>